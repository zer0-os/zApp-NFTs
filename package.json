{
	"name": "@zero-tech/zapp-nfts",
	"version": "0.4.0",
	"description": "zns marketplace app for zos",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zer0-os/zApp-NFTs.git"
	},
	"main": "dist/index.js",
	"scripts": {
		"clean": "rimraf dist && npx mkdirp dist",
		"build": "npm-run-all clean build:*",
		"build:scripts": "NODE_ENV=production babel --extensions \".ts,.tsx,.js,.jsx\" ./src --out-dir ./dist",
		"build:styles": "sass src:dist",
		"build:assets": "copyfiles -u 1 src/assets/* dist",
		"watch": "npm-run-all clean watch:all",
		"watch:all": "concurrently --kill-others --names \"babel,sass,assets,config\" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold,bgMagenta.bold\" \"npm run watch:scripts\" \"npm run watch:styles\" \"npm run watch:assets\" \"npm run watch:config\"",
		"watch:scripts": "npm run build:scripts -- --watch",
		"watch:styles": "npm run build:styles -- --watch",
		"watch:assets": "npm run build:assets && onchange 'src/**/*.{jpg,jpeg,svg,png}' -- npm run build:assets",
		"watch:config": "cp package.json dist/ && onchange 'package.json' -- npm run build:assets",
		"test": "jest",
		"test:watch": "jest --watch",
		"link": "bash .scripts/link.sh",
		"start:watch": "tsc --watch && cp src/*.css dist/",
		"prettier": "prettier -w src/"
	},
	"files": [
		"dist"
	],
	"author": "zer0-os",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.17.0",
		"@babel/core": "^7.16.7",
		"@babel/preset-env": "^7.16.8",
		"@babel/preset-react": "^7.16.7",
		"@babel/preset-typescript": "^7.16.7",
		"@reduxjs/toolkit": "^1.7.1",
		"@testing-library/jest-dom": "^5.16.4",
		"@types/enzyme": "^3.10.10",
		"@types/jest": "^27.4.0",
		"@types/react": "^16.9.14",
		"@types/react-dom": "^16.9.14",
		"@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
		"babel-jest": "^27.4.6",
		"babel-plugin-transform-rename-import": "^2.3.0",
		"concurrently": "^7.4.0",
		"copyfiles": "^2.4.1",
		"enzyme": "^3.11.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^27.4.7",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.6",
		"react-router-dom": "^5.3.0",
		"sass": "^1.53.0",
		"ts-jest": "^27.1.3",
		"typescript": "^4.1.6"
	},
	"peerDependencies": {
		"@reduxjs/toolkit": "^1.7.1",
		"@testing-library/react": "^11.2.6",
		"ethers": "^5.4.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.6",
		"react-router-dom": "^5.3.0"
	},
	"dependencies": {
		"@ethersproject/units": "^5.6.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/user-event": "^14.4.3",
		"@zero-tech/zapp-utils": "^0.2.0",
		"@zero-tech/zns-sdk": "0.6.1",
		"@zero-tech/zui": "0.11.3",
		"classnames": "^2.3.1",
		"formik": "^2.2.9",
		"moment": "^2.29.4",
		"react-query": "^3.39.1",
		"yup": "^0.32.11"
	}
}
